{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "productName": {
            "type": "string"
          },
          "productId": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "listPrice": {
            "type": "number"
          },
          "discountRate": {
            "type": "integer"
          },
          "available": {
            "type": "boolean"
          },
          "image": {
            "type": "string"
          }
        },
        "required": [
          "productName",
          "productId",
          "price",
          "listPrice",
          "discountRate",
          "available",
          "image"
        ]
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "results": {
          "type": "integer"
        },
        "requestTime": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": [
        "results",
        "requestTime",
        "region",
        "version"
      ]
    }
  },
  "required": [
    "recommendations",
    "metadata"
  ]
}